.profile-container
    .controls-container
        .close-profile(data-element-ref='closeProfile')
        .label='Info'
        .additional-menu
    .profile-panel
        .user
            .user-photo
                img(src='[photo]')
            .name='[name]'
            .status.isOnline='Online'
            .info
                .item
                    .icon.icon-info
                    .data
                        .value='[bio]'
                        .property='Bio'
                .item
                    .icon.icon-info
                    .data
                        .value='[username]'
                        .property='Username'
                .item
                    .icon.icon-info
                    .data
                        .value='[phone]'
                        .property='Phone'
                .item
                    .icon.icon-info
                    .data
                        .value='Notification'
                        .property='[isEnabledNotification]'
        form
            .sharedType
                input(type='radio' id='media' value='media' name='sharedType' data-element-ref='tabs')
                label(for='media')='Media'

                input(type='radio' id='docs' value='docs' name='sharedType' data-element-ref='tabs')
                label(for='docs')='Docs'

                input(type='radio' id='links' value='links' name='sharedType' data-element-ref='tabs')
                label(for='links')='Links'

                input(type='radio' id='audio' value='audio' name='sharedType' data-element-ref='tabs')
                label(for='audio')='Audio'
            .shared
                div(data-for='shared').sharedImage
                    img(src='[src]')
                    .time='[time]'




